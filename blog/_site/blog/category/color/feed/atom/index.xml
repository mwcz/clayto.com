    <link rel="alternate" type="text/html" href="http://mwcz.org/blog/2011/11/16/html5-canvas-area-selection-averaging" />
    <id>http://mwcz.org/blog/2011/11/16/html5-canvas-area-selection-averaging</id>
    <updated>2011-11-16T18:25:00Z</updated>
    <published>2011-11-16T18:25:00Z</published>
    <category scheme="http://mwcz.org/blog" term="color" />
    <category scheme="http://mwcz.org/blog" term="canvas" />
