    img0.histo( imgg.canvas, 'g', 'rgba(0,200,0,0.9)', 'rgba(0,0,0,0.8)' )
    img0.histo( imgb.canvas, 'b', 'rgba(0,0,200,0.9)', 'rgba(0,0,0,0.8)' )

}

var img0, imgr, imgg, imgb; // make img0 public so I can play with it in firebug more easily

